# ===================================
# Telegram 时政经济监控系统 - 环境变量配置
# ===================================

# Telegram 配置（从 https://my.telegram.org/apps 获取）
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+8613800138000
TELEGRAM_SESSION=your_string_session_here
TELEGRAM_CHANNELS=-1001234567890,-1001234567891
TELEGRAM_ENABLED=true

# 批量分析间隔（分钟）
BATCH_INTERVAL=5

# Gemini AI 配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# 邮件通知配置
EMAIL_SENDER=your_email@qq.com
EMAIL_PASSWORD=your_授权码
EMAIL_RECEIVER=your_email@qq.com
SMTP_SERVER=smtp.qq.com
SMTP_PORT=465

# 企业微信（可选）
WECHAT_WEBHOOK_URL=

# 日志级别
LOG_LEVEL=INFO
DEBUG=false
